<%= render :partial => 'shared/breadcrumbs',
           :locals => {:section => @article.section,
                       :detail => link_to(@article.title, article_path(@article))} %>

<div class="article">

  <div class="header">
    <div class="authorpic">
      <%= image_tag 'authorpic.png' %>
      <div class="author">
        <%= link_to @article.byline, user_path(@article.user) %>
      </div>
    </div>
    <h2>
      <%= @article.title %>
    </h2>
    <div class="date">
      <%= @article.date_string %>
    </div>
  </div>



  <div class="tagline">
    <%= @article.tagline %>
  </div>

  <div class="body">
    <%= @article.render %>
    <%#= markdown(@article.body) %>
  </div>


  <div class="footer">
    <h3>Comments</h3>
    <div class="comments">

      <% @article.comments.each do |c| %>

        <%= render c %>

      <% end %>

      <% if current_user %>
        
        <div class="comment_form">

          <h4>Write a Comment</h4>

          <%= form_tag article_comments_path(@article) do %>

            <p>Comment As:</p>
            <div class="field">
              <%= radio_button_tag :anonymous, "false", true, :name => 'comment[anonymous]' %>
              <%= label_tag :anonymous_false, current_user.name %>
              <br/>
              <%= radio_button_tag :anonymous, "true", false, :name => 'comment[anonymous]' %>
              <%= label_tag :anonymous_true, "Anonymous (admins will still be able to identify you)" %>
            </div>
            <br/>

            <div class="field">
              <%= label_tag :body, "Comment:" %><br/>
              <%= text_area_tag :body, nil, :name => 'comment[body]' %>
            </div>
            
            <div class="action">
              <%= submit_tag "Comment" %>
            </div>
            
          <% end %>
        </div>

      <% else %>

        You must be <%= link_to "logged in", "/login" %> to post a comment

      <% end %>

      
    </div>
  </div>


</div>


<% content_for :sidebar do %>

  <div class="top_stories">
    <h3>Top Stories</h3>
    <ol>
      <% @article.section.latest_articles_from_children_by_rank(3).each_with_index do |a,i| %>
        <li>
          <%= link_to image_tag(number_to_picture(i+1)) + a.title, article_path(a) %>
        </li>
      <% end %>
    </ol>
  </div>

  <div class="adspace1">
    <%= image_tag "adspace250x250.png", :width => "250px" %>
  </div>

  <div class="featured_list">
    <h3>Related Articles</h3>
    <ol>
      <% Article.featured(5).each do |a| %>
        <li>
          <%= link_to image_tag("ylogo_small_thumb.png") + a.title, article_path(a) %>
        <li>
      <% end %>
    </ol>
  </div>

 
  <div class="featured_list">
    <h3>Most Popular</h3>
    <ol>
    </ol>
  </div>


<% end %>
