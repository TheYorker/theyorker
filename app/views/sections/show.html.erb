<%= render :partial => 'shared/breadcrumbs', :locals => {:section => @section} %>

<div class="headline_container">
  <div class="headline_image">
    <ul>
      <% @section.headline_articles.each do |a| %>
        <% if a %>
          <li>
            <%= image_tag a.headline_image %>
            <h2><%= link_to a.title, article_path(a) %></h2>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div class="article_list">
  <% @section.published_articles.each do |a| %>
    <%= render :partial => 'shared/article', :locals => {:article => a} %>
  <% end %>
</div>


<% @section.children.each do |s| %>
  <%= render s %>
<% end %>


<% content_for :sidebar do %>

  <div class="featured_list featured_3_articles">
    <h3>Top Stories</h3>
    <div class="article_list">
      <% @section.latest_articles_from_children_by_rank(3).each do |a| %>
        <%= render :partial => 'shared/article_small',
                   :locals => {:article => a} %>
      <% end %>
    </div>
  </div>

  <div class="adspace1">
    <%= image_tag "adspace250x250.png", :width => "250px" %>
  </div>

  <div class="featured_list featured_5_articles">
    <h3>Editor's Picks</h3>
    <div class="article_list">
      <% Article.featured(5).each do |a| %>
        <%= render :partial => 'shared/article_small',
                   :locals => {:article => a} %>
      <% end %>
    </div>
  </div>

  <div class="featured_list featured_5_articles">
    <h3>Recently Commented</h3>

  </div>

<% end %>
