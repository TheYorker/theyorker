<div class="section_stub">
  <div class="section_name">
    <%= link_to "[#{section.name}]", section_path(section) %>
  </div>
  <div class="article_list">
    <%= render :partial => 'shared/article_large',
               :locals => {:article => section.top_article_from_children} %>
    
    <% section.latest_non_top_articles_from_children.each do |a| %>
      <%= render :partial => 'shared/article', :locals => {:article => a} %>
    <% end %>
  </div>

</div>

