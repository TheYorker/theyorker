<%= form_for @user do |f| %>

  <div class="field">
    <%= f.label :password, "Password:" %><br/>
    <%= f.password_field :password %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirm Password:" %><br/>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="action">
    <%= f.submit "Change Password" %>
  </div>

<% end %>

